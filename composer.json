{
  "name": "otra/otra",
  "type": "library",
  "description": "The OTRA PHP framework",
  "keywords": ["framework"],
  "homepage": "https://github.com/lperamo/otra",
  "license": "X11",
  "authors": [
    {
      "name": "Lionel PÃ©ramo",
      "email": "lionel.peramo@wexample.com",
      "homepage": "https://wexample.com"
    }
  ],
  "bin" : ["bin/otra.php"],
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "require": {
    "ext-fileinfo": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "php": ">=8.0.0",
    "symfony/yaml": "^4.0"
  },
  "require-dev": {
    "ext-curl": "*",
    "ext-inotify": "*",
    "ext-openssl": "*",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ext-zlib": "*"
  },
  "suggest": {
    "ext-inotify": "Needed to use the OTRA genWatcher task.",
    "ext-openssl": "Needed to encrypt passwords securely",
    "ext-zend-opcache": "Needed to use the preloading feature available since PHP 7.4."
  }
}
