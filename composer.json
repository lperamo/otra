{
  "name": "otra/otra",
  "type": "library",
  "description": "The OTRA PHP framework",
  "keywords": ["framework"],
  "homepage": "https://github.com/lperamo/otra",
  "license": "X11",
  "authors": [
    {
      "name": "Lionel PÃ©ramo",
      "email": "lionel.peramo@wexample.com",
      "homepage": "https://wexample.com"
    }
  ],
  "bin" : ["bin/otra.php"],
  "config": {
    "sort-packages": true
  },
  "prefer-stable": true,
  "require": {
    "php": ">=8.2.0",
    "ext-curl": "*",
    "ext-fileinfo": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "ext-ssh2": "*",
    "ext-zend-opcache": "*",
    "ext-zlib": "*",
    "symfony/yaml": "6.1.*",
    "ext-pdo": "*"
  },
  "require-dev": {
    "ext-inotify": "*",
    "ext-intl" : "*",
    "ext-pdo_mysql": "*",
    "rector/rector": "*"
  },
  "suggest": {
    "ext-inotify": "Needed to use the OTRA genWatcher task.",
    "ext-intl": "Recommended for Rector.",
    "ext-openssl": "Needed to encrypt passwords securely"
  }
}
