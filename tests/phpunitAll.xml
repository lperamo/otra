<?xml version="1.0" encoding="utf-8" ?>
<phpunit bootstrap="TestBootstrap.php" verbose="true">
  <!--convertErrorsToExceptions="true"-->
  <!--convertNoticesToExceptions="true"-->
  <!--convertWarningsToExceptions="true"-->
  <testsuites>
    <testsuite name="Block templating system">
      <file>./src/lib/myLibs/BlocksTest.php</file>
    </testsuite>
    <testsuite name="Database console tasks">
      <file>./src/lib/myLibs/console/DatabaseTest.php</file>
    </testsuite>
    <testsuite name="SQL DBAL and the SQL drivers">
      <directory>./src/lib/myLibs/database</directory>
    </testsuite>
    <testsuite name="Debug and log tools">
      <file>./src/lib/myLibs/DebugToolsTest.php</file>
      <file>./src/lib/myLibs/LoggerTest.php</file>
      <file>./src/lib/myLibs/OtraExceptionTest.php</file>
      <file>./src/lib/myLibs/console/OtraExceptionCliTest.php</file>
      <file>./config/AllConfigTest.php</file>
    </testsuite>
    <testsuite name="Console architecture tasks">
      <directory>./src/lib/myLibs/console/architecture</directory>
    </testsuite>
  </testsuites>
  <filter>
    <whitelist addUncoveredFilesFromWhitelist="false">
      <directory suffix=".php">../</directory>
      <directory suffix=".php">../bundles/*</directory>
      <directory suffix=".php">../lib/myLibs/</directory>
      <directory suffix=".php">../web/</directory>
      <exclude>
        <directory>./</directory>
        <directory>./bundles/</directory>
        <directory>../.git</directory>
        <directory>../.idea</directory>
        <directory>../bundles/config</directory>
        <directory>../cache</directory>
        <directory>../logs</directory>
        <directory>./coverageHtml</directory>
        <directory>../lib/myLibs/Sf2Yaml</directory>
      </exclude>
    </whitelist>
  </filter>
  <logging>
    <log type="coverage-clover" target="./coverage.xml"/>
    <log type="coverage-html" target="./coverageHtml"/>
  </logging>
</phpunit>
