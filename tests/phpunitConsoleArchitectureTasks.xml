<?xml version="1.0" encoding="utf-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" bootstrap="TestBootstrap.php" verbose="true" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd">
  <coverage pathCoverage="true">
    <include>
      <directory suffix=".php">../</directory>
      <directory suffix=".php">../bundles/*</directory>
      <directory suffix=".php">../src/</directory>
      <directory suffix=".php">../web/</directory>
    </include>
    <exclude>
      <directory>./</directory>
      <directory>./bundles/</directory>
      <directory>../.git</directory>
      <directory>../.idea</directory>
      <directory>../bundles/config</directory>
      <directory>../cache</directory>
      <directory>../logs</directory>
      <directory>./coverageHtml</directory>
      <directory>./tests</directory>
    </exclude>
    <report>
      <clover outputFile="./coverage.xml"/>
    </report>
  </coverage>
  <testsuites>
    <testsuite name="Console architecture tasks">
      <directory>./src/console/architecture</directory>
    </testsuite>
  </testsuites>
  <logging>
    <junit outputFile="./report.xml"/>
  </logging>
</phpunit>
