<?xml version="1.0"?>
<psalm
  allowPhpStormGenerics="true"
  findUnusedVariablesAndParams="true"
  findUnusedCode="true"
  strictBinaryOperands="true"
  totallyTyped="true"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="https://getpsalm.org/schema/config"
  xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
  <globals>
    <var name="_SERVER" type="array{APP_ENV:string,REQUEST_URI:string}"/>
    <!-- Workaround because Psalm does not find those! -->
    <var name="BASE_PATH" type="string"/>
    <var name="CLASSMAP" type="array"/>
  </globals>

  <!-- Workaround because Psalm does not find those classes! -->
  <stubs>
    <file name="cache/php/RouteManagement.php" preloadClasses="true"/>
    <file name="cache/php/ClassMap.php" preloadClasses="true"/>
  </stubs>
 
  <projectFiles>
    <directory name="config" />
    <directory name="src" />
<!--    <file name="config/constants.php"/>-->
    <file name="cache/php/RouteManagement.php"/>
    <directory name="web"/>
    <!-- Those three files can reproduce the problem with Psalm. -->
    <!--        <file name="src/OtraException.php"/>-->
    <!--        <file name="src/Controller.php"/>-->
    <!--        <file name="src/MasterController.php"/>-->
    <ignoreFiles>
      <directory name="src/ideConfiguration"/>
      <directory name="src/init"/>
      <directory name="src/resources"/>

      <!-- Psalm does not succeed to parse the Controller instanciation in the method 'errorMessage:93' of
      src/OtraException.php file! To test this file, it must be tested separately for now -->
      <file name="src/OtraException.php"/>
      <directory name="vendor"/>
    </ignoreFiles>
  </projectFiles>
  <fileExtensions>
    <extension name=".php"/>
    <extension name=".phtml"/>
  </fileExtensions>
</psalm>
